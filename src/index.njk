        </section>


        <!-- Transformacion Digital
        ============================================= -->

        <section class="px-2" style="background-color: #e9f0f8;">
            <div class="container clearfix ">
                <div class="row py-6">
                    
                    <div class="col-lg-12 text-center mb-4">

                        <h1 class="text-titles">Interoperabilidad</h1>

                        <!-- <a href="#" class="btn">Ir a productos <i class="fa-solid fa-right-long"></i></a> -->
                    </div>

                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="row">
                                    {% for trans in collections.transformacion | limit(3)%}
                                    <div class="col-lg-4 my-4 text-center">
                                        <a href="{{trans.url}}"><div class="cuadro_plataformas">
                                            <img src="{{trans.data.image}}">
                                            <h2 class="text-titles hover_white">{{trans.data.title}}</h2>
                                            <p>{{trans.data.description}}</p>
                                        </div></a>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    {% for trans in collections.transformacion | limitPart(3,6)%}
                                    <div class="col-lg-4 my-4 text-center">
                                        <a href="{{trans.url}}"><div class="cuadro_plataformas">
                                            <img src="{{trans.data.image}}">
                                            <h2 class="text-titles hover_white">{{trans.data.title}}</h2>
                                            <p>{{trans.data.description}}</p>
                                        </div></a>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>
            </div>
        </section>

        <!-- Recursos
        ============================================= -->

        <section class="px-2">
            <div class="container clearfix ">
                <div class="row py-6">
                    <div class="col-lg-12">
                        <h1 class="text-titles">Recursos</h1>
                    </div>
                    <div class="col-lg-12">
                        {% for recurso in collections.recursos %}
                        <div class="iniciativas my-4">
                            <img style="width: 30%;" src="{{recurso.data.image}}">
                            <div class="px-6">
                                <h2 class="text-titles">{{recurso.data.title}}</h2>
                                <p>{{recurso.data.description}}</p>
                                <a class="btn" href="{{recurso.data.recurso}}" target="_blank">Descargar <i class="fa-solid fa-right-long"></i></a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </section>

